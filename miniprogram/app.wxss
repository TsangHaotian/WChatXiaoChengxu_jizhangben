.clearfix::after {
    visibility: hidden;
    display: block;
    font-size: 0;
    content: " ";
    clear: both;
    height: 0;
}

view,text,image{
  box-sizing:border-box;
}

/* ===== 全局科幻暗色主题 ===== */
page{
  background:#050816;              /* 深空背景 */
  color:#E5E7EB;                   /* 浅灰文字 */
  font-family:-apple-system,BlinkMacSystemFont,"Segoe UI",Roboto;
}

.neon-border{
  border:1rpx solid rgba(56,189,248,0.5); /* 青色霓虹边 */
  box-shadow:0 0 14rpx rgba(56,189,248,0.6);
}

.glass-panel{
  background:rgba(15,23,42,0.86);  /* 深蓝玻璃 */
  backdrop-filter:blur(18rpx);
}

.text-sub{
  color:#9CA3AF;
  font-size:24rpx;
}

.text-positive{
  color:#4ADE80;                   /* 收入：荧光绿 */
}

.text-negative{
  color:#F97373;                   /* 支出：荧光红 */
}
